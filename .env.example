# Polymarket API Configuration
PK=YOUR_PRIVATE_KEY_HERE
CLOB_API_KEY=YOUR_CLOB_API_KEY_HERE
CLOB_API_SECRET=YOUR_CLOB_API_SECRET_HERE
CLOB_API_PASSPHRASE=YOUR_CLOB_API_PASSPHRASE_HERE
POLYMARKET_PROXY_ADDRESS=YOUR_PROXY_ADDRESS_HERE

# === 기본 운영 설정 (Basic Settings) ===
PAPER_TRADING=False      # True: 모의 투자 (돈 안 듦), False: 실전 (Real Money)
INITIAL_BANKROLL=1000.0  # 봇이 인식할 초기 자본금 (수익률 계산용)
DEBUG_MODE=True          # True: 상세 로그 출력 (에러 디버깅용)

# === 전략 정밀 튜닝 (Strategy Tuning) ===
MIN_EDGE=0.03            # 최소 우위 (Edge) 3% 이상일 때만 진입
KELLY_FRACTION=0.25      # 켈리 공식의 25%만 베팅 (리스크 관리)
MAX_BET_FRACTION=0.10    # 1회 최대 베팅 금액 (뱅크롤 대비 10% 제한)
MIN_BET_USDC=1.0         # 최소 베팅 금액 ($1 미만은 무시)

# === 리스크 관리 (Risk Management) ===
MAX_CONCURRENT_BETS=10   # 동시에 가질 수 있는 최대 포지션 수
DRAWDOWN_HALT_PCT=0.50   # 뱅크롤이 50% 이상 줄어들면 봇 강제 정지 (깡통 방지)